
<div class="p-3">
  <%= link_to 'Back', posts_path %>
  <br />
  <h2>
    <strong>Title:</strong>
    <%= @post.title %>
  </h2>
  <hr />
  <%= render partial: 'tags/index' %>
  <hr />
  <p>Posted At : <%= time_ago_in_words(@post.created_at) %></p>
  <p>
    <%= @post.body %>
  </p>
  <div class="d-flex justify-content-end">
    <div>
      <% if user_signed_in? %>
      <%= link_to 'Edit', edit_post_path(@post) %>
      <%= link_to 'Delete', @post, :method => :delete, data: { confirm: "Are you sure you want to delete post?"} %>
      <% end %>
    </div>
  </div>

  <%= render partial: 'comments/form' %>
  <h3>Comments</h3>
  <%= render partial: 'comments/comment', collection: @post.comments.reverse %>
</div>
