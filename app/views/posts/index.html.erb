
<div class="p-3 ">
  <h1>Blogs List</h1>
  <div class="d-flex justify-content-between px-2 py-2">
    <h4>Title</h4>
    <h4>Posted At</h4>
    <h4></h4>
  </div>
  <% @posts.each do |post| %>
    <div class="d-flex justify-content-between align-items-center bg-primary px-2 py-2 my-2">
        <span><%= post.title %></span>
        <span><%= time_ago_in_words(post.created_at) %></span>
        <span><%= link_to 'view full blog', post %></span>
    </div>
  <% end %>
</div>

<br>
