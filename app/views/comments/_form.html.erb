<h3>Post a Comment </h3>

<%= form_for [ @post, @comment] do |form| %>
    <div class="p-3 mb-2">
        <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
        <%= form.label :body %>
        <%= form.text_area :body, class: "form-control" %>
        </div>

        <div class="mb-3">
            <%= form.submit "Comment", class: "btn btn-primary" %>
        </div>
    </div>
<% end %>